spring:
  datasource:
    url: "{{ app1.db.url }}"
    username: "{{ app1.db.user }}"
    password: "{{ app1.db.user_password }}"
    driverClassName: "{{ app1.db.driver }}"
  jpa:
    database: "MYSQL"
    show-sql: "true"
    hibernate:
      ddl-auto: "none"
      dialect: "org.hibernate.dialect.MySQL5Dialect"
  data:
    elasticsearch:
      cluster-nodes: "{{ index.ip }}:{{ index.ports.tcp }}"
      cluster-name: "{{ index.cluster.name }}"

logging:
  file: "{{ app1.logging_file}}"

management:
  port: "{{ app1.management.port }}"

endpoints:
  shutdown:
    enabled: true
